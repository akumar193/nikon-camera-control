            <RowDefinition Height="220*" />
            <RowDefinition Height="46*" />
            <RowDefinition Height="41*" />
        </Grid.RowDefinitions>
        <Button Content="Close" Grid.Row="2" Height="23" Name="button2" VerticalAlignment="Top" Click="button2_Click" Margin="168,0" />
