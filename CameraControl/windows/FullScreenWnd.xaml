<Window x:Class="CameraControl.windows.FullScreenWnd"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:CameraControl="clr-namespace:CameraControl"
        Title="FullScreenWnd" Height="300" Width="300" WindowState="Maximized" WindowStyle="None" KeyDown="image1_KeyDown">
    <Grid>
        <Image Name="image1" Stretch="Uniform" Source="{Binding Source={x:Static Member=CameraControl:ServiceProvider.Settings}, Path=SelectedBitmap.DisplayImage}" KeyDown="image1_KeyDown" MouseDown="image1_MouseDown" />
    </Grid>
</Window>
